		var EnvioLimite = "<%= parseFloat(envioLimite)/2 %>";
		const CostoEnvio = parseFloat("<%= parseFloat(costoEnvio) %>");



		console.log(EnvioLimite);
		console.log(CostoEnvio);
	</script>
	<script src="./scriptsEnvio.js"></script>

	<script src="../globals.js"></script>
